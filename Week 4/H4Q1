/*
Write 2 versions of a program that reads a positive integer, n, and prints the first n even numbers.

* Use while loop in the first
* Use for loop in the second

Each section should interact with the user like this:
Please enter a positive integer: 3
2
4
6
*/
#include <iostream>
using namespace std;


int main() {
	int inputA, outputA, counterA;

	cout << "First version" << endl;
	cout << "Please enter a positive integer: ";
	cin >> inputA;

	outputA = 0;
	counterA = 0;
	while (inputA > 0) {
		outputA += 2;
		cout << outputA << endl;
		inputA--;
	}

	cout << endl;

	int inputB, outputB, counterB;

	cout << "Second version" << endl;
	cout << "Please enter a positive integer: ";
	cin >> inputB;

	outputB = 0;
	for (counterB = 0; counterB < inputB; counterB++) {
		outputB += 2;
		cout << outputB << endl;
	}

	return 0;
}
